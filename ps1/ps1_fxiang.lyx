\begin_inset Formula 
\[
\bar{k}=\alpha\beta z\bar{k}^{\alpha}\quad\Rightarrow\quad\bar{k}=\left(\alpha\beta z\right)^{\frac{1}{1-\alpha}}
\]

\end_inset


\begin_inset Formula 
\[
\bar{c}=f\left(\bar{k}\right)-\bar{k}=z\left(\alpha\beta z\right)^{\frac{\alpha}{1-\alpha}}-\left(\alpha\beta z\right)^{\frac{1}{1-\alpha}}
\]

\end_inset


\begin_inset Formula 
\[
r=z\alpha\bar{k}^{\alpha-1}=\frac{1}{\beta}
\]

\end_inset


\begin_inset Formula 
\[
\omega=z\left(1-\alpha\right)\bar{k}^{\alpha}=z\left(1-\alpha\right)\left(\alpha\beta z\right)^{\frac{\alpha}{1-\alpha}}
\]

\end_inset


\begin_inset Formula 
\[
y=z\bar{k}^{\alpha}=z\left(\alpha\beta z\right)^{\frac{\alpha}{1-\alpha}}
\]

\end_inset


